{
  "compilerOptions": {
    "target": "ES2023",                                 
    "module": "ESNext",                                
    "moduleResolution": "node",                     
    "baseUrl": "./",                                  
    "paths": {
      "@/*": ["./src/*"]
    },                                      
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  }
}
