generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  passwordHash String
  phoneNumber  String?
  isActive     Boolean
  Role         Role
  CustomerType CustomerType
  createdAt    DateTime  @default(now())
  Products     Product[]
  Leads        Lead[]
}

enum Role {
  ADMIN
  CLIENT
}

enum CustomerType {
  B2C
  B2B 
}

model Product {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  title       String
  description String?
  code        String?
  price       String
  condition   String?
  photos      String[]
  User        User     @relation(fields: [userId], references: [id])
  userId      String
  Leads       Lead[]
}

model Lead {
  id        String     @id @default(uuid())
  nome      String
  email     String
  telefone  String
  message   String?
  Product   Product    @relation(fields: [productId], references: [id])
  productId String
  User        User     @relation(fields: [userId], references: [id])
  userId      String
  Status    LeadStatus
  Option    LeadOption
  createdAt DateTime   @default(now())
}

enum LeadStatus {
  NOVO_INTERESSE
  CONTATO_FEITO
  NEGOCIACAO
  VENDIDO
  NAO_INTERESSADO
}

enum LeadOption {
  ATEMDIMENTO_IA
  ATENDIMENTO_HUMANO
}
